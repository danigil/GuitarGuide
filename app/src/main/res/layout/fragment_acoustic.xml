<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AcousticFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/acoustic"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginBottom="3dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintStart_toStartOf="parent" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="98dp"
        custom:direction="right"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Tuners" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="64dp"
        custom:direction="right"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Guitar Neck" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="76dp"
        custom:direction="right"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Sound Hole" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="168dp"
        custom:direction="left"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Bridge" />


</androidx.constraintlayout.widget.ConstraintLayout>