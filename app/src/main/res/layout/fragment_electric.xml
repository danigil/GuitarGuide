<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ElectricFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/imageView"
        android:src="@drawable/electric"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginBottom="3dp"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintStart_toStartOf="parent" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="188dp"
        custom:direction="left"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Tuners" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="132dp"
        custom:direction="right"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Neck" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="116dp"
        custom:direction="right"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Pickups" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="188dp"
        custom:direction="left"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Bridge" />

    <com.melons.melon.guitarguide.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="48dp"
        custom:direction="right"
        custom:isChecked="false"
        custom:layout_constraintEnd_toEndOf="@+id/imageView"
        custom:layout_constraintTop_toTopOf="@+id/imageView"
        custom:text="Audio Jack" />

</androidx.constraintlayout.widget.ConstraintLayout>